#include <iostream>
using namespace std;

int main() {
	int t;
	cin>>t;
	while(t--){
	    int x,y;
	    cin>>x>>y;
	    if(y>=x){
	        cout<<y-x<<endl;
	    }
	    else if(x%2==0 and y%2==0 or x%2!=0 and y%2!=0){
	        cout<<(x-y)/2<<endl;
	    }
	    else if(x%2!=0 or y%2!=0){
	        cout<<((x-y+1)/2)+1<<endl;
	    }
	}
	return 0;
}
